<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="controllers.Admin.UserListController"
           stylesheets="@../../styles/admin-styles.css"
           prefHeight="700.0" prefWidth="1000.0">

    <left>
        <fx:include fx:id="sidebar" source="AdminSidebar.fxml"/>
    </left>

    <center>
        <VBox spacing="20">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Button fx:id="backButton" text="Back" onAction="#handleBack" styleClass="action-button, back-button"/>
        <Label styleClass="page-title" text="User List"/>
        <HBox HBox.hgrow="ALWAYS"/>
        <Button fx:id="addUserButton" text="Add User" onAction="#handleAddUser" styleClass="action-button, success-button"/>
        <Button fx:id="refreshButton" text="Refresh" onAction="#handleRefresh" styleClass="action-button"/>
    </HBox>

    <!-- Search and Filter Section -->
    <VBox spacing="10" styleClass="search-section">
        <Label text="Search and Filter" styleClass="section-title"/>
        <HBox spacing="15" alignment="CENTER_LEFT">
            <TextField fx:id="searchField" promptText="Search by name, email, or phone..." prefWidth="300" 
                      styleClass="search-field" onKeyReleased="#handleSearch"/>
            <ComboBox fx:id="statusFilterComboBox" promptText="Filter by status (Active/Blocked)" prefWidth="180" 
                     styleClass="filter-combo" onAction="#handleStatusFilter"/>
            <Button fx:id="clearFiltersButton" text="Clear Filters" onAction="#handleClearFilters" 
                   styleClass="action-button, clear-button"/>
        </HBox>
    </VBox>

    <Label styleClass="section-title" text="Users"/>
    <ListView fx:id="userListView" VBox.vgrow="ALWAYS" styleClass="custom-list-view"/>

    <!-- Pagination Section -->
    <HBox spacing="10" alignment="CENTER" styleClass="pagination-section">
        <Button fx:id="firstPageButton" text="First" onAction="#handleFirstPage" 
               styleClass="pagination-button" disable="true"/>
        <Button fx:id="prevPageButton" text="Previous" onAction="#handlePrevPage" 
               styleClass="pagination-button" disable="true"/>
        <Label fx:id="pageInfoLabel" text="Page 1 of 1" styleClass="page-info"/>
        <Button fx:id="nextPageButton" text="Next" onAction="#handleNextPage" 
               styleClass="pagination-button" disable="true"/>
        <Button fx:id="lastPageButton" text="Last" onAction="#handleLastPage" 
               styleClass="pagination-button" disable="true"/>
        <Label text=" | " styleClass="separator"/>
        <Label text="Users per page:" styleClass="page-size-label"/>
        <ComboBox fx:id="pageSizeComboBox" onAction="#handlePageSizeChange" 
                 prefWidth="80" styleClass="page-size-combo"/>
    </HBox>

    <Label fx:id="messageLabel" text="User list will be displayed here" styleClass="info-message"/>
        </VBox>
    </center>
</BorderPane>
