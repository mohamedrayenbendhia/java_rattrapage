<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.LoginController"
            prefHeight="700.0" prefWidth="1000.0">

    <!-- Styles CSS -->
    <stylesheets>
        <URL value="@../styles/forms.css" />
    </stylesheets>

    <center>
        <VBox alignment="CENTER" spacing="20.0" styleClass="form-container">
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>

            <Text styleClass="form-title" text="ConneTion"/>
            <Text styleClass="form-subtitle" text="Enter your credentials to log in"/>

            <VBox spacing="15">
                <!-- Champ Email -->
                <VBox spacing="5" styleClass="form-group">
                    <Label text="Email" styleClass="form-label"/>
                    <TextField fx:id="emailField" promptText="Enter your email" styleClass="text-field"/>
                </VBox>

                <!-- Champ Mot de passe -->
                <VBox spacing="5" styleClass="form-group">
                    <Label text="Password" styleClass="form-label"/>
                    <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="text-field"/>
                </VBox>

                <!-- Option Se souvenir de moi -->
                <HBox alignment="CENTER_LEFT">
                    <CheckBox text="Se souvenir de moi" style="-fx-text-fill: -fx-dark-color;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Hyperlink fx:id="forgotPasswordLink" text="Forget password ?" style="-fx-border-color: transparent;" onAction="#handleForgotPassword"/>
                </HBox>
            </VBox>

            <!-- Bouton de connexion -->
            <Button fx:id="loginButton" text="CONNECT" styleClass="primary-button"
                    onAction="#handleLogin" maxWidth="Infinity"/>

            <!-- Lien d'inscription -->
            <HBox alignment="CENTER" spacing="10">
                <Text text="Not yet registered ?" style="-fx-fill: -fx-dark-color;"/>
                <Hyperlink fx:id="registerLink" text="Create your account" onAction="#handleRegister"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>