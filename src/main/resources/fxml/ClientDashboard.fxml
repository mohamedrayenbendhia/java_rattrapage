<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.ClientDashboardController"
            prefHeight="700.0" prefWidth="1000.0">

    <top>
        <VBox>
            <MenuBar style="-fx-background-color: #3498db; -fx-padding: 5px;">
                <Menu text="Fichier" style="-fx-text-fill: white;">
                    <MenuItem text="Déconnexion" onAction="#handleLogout"/>
                    <SeparatorMenuItem />
                    <MenuItem text="Quitter" onAction="#handleExit"/>
                </Menu>
            </MenuBar>

            <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: #2980b9; -fx-padding: 15px;">
                <Text text="Système de notation - Client" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-fill: white;"/>
                <Pane HBox.hgrow="ALWAYS" />
                <Text fx:id="userInfoText" text="Connecté en tant que: Client" style="-fx-fill: white;"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Text text="Système de notation" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #2c3e50;"/>

            <!-- Statistiques -->
            <HBox spacing="30" alignment="CENTER">
                <VBox alignment="CENTER" spacing="15" style="-fx-background-color: linear-gradient(to bottom, #e74c3c, #c0392b); -fx-padding: 25px; -fx-background-radius: 10px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);">
                    <Text text="Ratings donnés" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-fill: white;"/>
                    <Text fx:id="ratingsGivenLabel" text="0" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-fill: white;"/>
                </VBox>

                <VBox alignment="CENTER" spacing="15" style="-fx-background-color: linear-gradient(to bottom, #f39c12, #e67e22); -fx-padding: 25px; -fx-background-radius: 10px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);">
                    <Text text="Ratings reçus" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-fill: white;"/>
                    <Text fx:id="ratingsReceivedLabel" text="0" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-fill: white;"/>
                </VBox>
            </HBox>

            <!-- Navigation buttons -->
            <HBox spacing="15" alignment="CENTER">
                <Button text="Voir tous les clients" onAction="#handleViewClients" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5;"/>
                <Button text="Mes ratings donnés" onAction="#handleViewGivenRatings" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5;"/>
                <Button text="Mes ratings reçus" onAction="#handleViewReceivedRatings" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5;"/>
                <Button text="Actualiser" onAction="#handleRefreshRatings" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5;"/>
            </HBox>

            <!-- Content area for tables -->
            <VBox fx:id="ratingContentArea" spacing="15" style="-fx-background-color: #f8f9fa; -fx-padding: 20px; -fx-background-radius: 10px;">
                <Text text="Sélectionnez une action ci-dessus pour commencer" style="-fx-font-size: 16px; -fx-fill: #7f8c8d;" textAlignment="CENTER"/>
            </VBox>
        </VBox>
    </center>

</BorderPane>
